<h1><%= "Editing #{@account.user_name}'s account" %></h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |e| %>
        <%= e %>
    <% end %>
<% end %>

<%= form_for @account do |f| %>
    <%= f.label "Current User Name:" %><br>
    <%= f.text_field :user_name, :value => @account.user_name %><br>
    
    <%= f.label "Current Bio:" %><br>
    <%= f.text_area :bio, :value => @account.bio%><br>

    <div class="form-group">
    <%=f.label :image%>
    <%=f.file_field :image, class: 'form-control'%>
    </div>

    <%= f.submit "Update Profile"%>

<% end %>

<%= link_to "Delete This Account", account_path(@account.id), :method => :delete %>



