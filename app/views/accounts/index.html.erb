<h1>posts for all users</h1>
   <div class="container">
      <div class="row">
       <div class="col-8">
   <% @posts.each do |post|%>
    <div class="card">
    <div class="card-body p-1">
        <%=post.account.user_name%>
       <%=image_tag url_for(post.image), class: "d-block w-100"%>
       <%=link_to "View Image", post_path(post.image.id), class: 'btn btn-secondary stretched-link'%>
       </div>
    </div>
   <%end%>
   </div>
  </div>
</div>
   


